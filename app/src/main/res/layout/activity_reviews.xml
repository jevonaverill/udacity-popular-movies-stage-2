<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvReviewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin_16dp"
        android:paddingBottom="@dimen/activity_vertical_margin_16dp"
        android:gravity="center_horizontal"
        android:text="@string/movie_review_title"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:background="@color/colorPrimary"/>

    <ListView
        android:id="@+id/lvReviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvReviewsError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_reviews_found"
        android:visibility="invisible"
        android:textStyle="italic"
        android:textSize="24sp"
        android:gravity="center" />

</LinearLayout>